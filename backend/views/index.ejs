<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    
    <!-- Embedding CSS styles -->
    <style>
        .billing-container {
            display: flex;
            background-color: #f7f7f7;
            flex-direction: column;
            align-items: center;
        }

        .billing-details {
            padding: 60px;
            background-color: #fff;
            margin: 60px;
            width: 90%;
            margin-bottom: 0;
        }

        .footer-title {
            font-size: 20px;
            font-weight: 900;
            line-height: 15px;
            margin-bottom: 25px;
            padding-bottom: 10px;
            color: #434343;
            text-transform: uppercase;
            position: relative;
        }

        .footer-title::before {
            content: '';
            position: absolute;
            bottom: 0;
            width: 50px;
            height: 1.5px;
            background-color: #c87065;
        }

        .checkout-heading {
            font-size: 15px;
        }

        .button-one {
            position: relative;
            font-family: "Lato", sans-serif;
            font-size: 13px;
            background: #e0dddd;
            color: #666;
            font-weight: 700;
            height: 35px;
            line-height: 35px;
            padding: 0 25px;
            text-transform: uppercase;
            border: none;
            overflow: hidden;
            margin-bottom: 10px;
        }

        .button-one::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 0;
            height: 100%;
            background-color: #c8a165;
            transition: width 0.4s ease;
            z-index: -1;
        }

        .button-one:hover::before {
            width: 100%;
        }

        .button-one:hover {
            color: #fff;
            z-index: 1;
        }
        .billing-details input {
  width: 100%;
  padding: 10px;
  margin-bottom: 15px;
  background-color: #f7f7f7;
  border: none;
  color: #555;
  font-size:15px;
  font-weight: 600;
}
    </style>
    
    <!-- JavaScript for handling verification status -->
    <script>
      document.addEventListener('DOMContentLoaded', (event) => {
        var status = '<%= JSON.stringify(status) %>';
        
        if (JSON.parse(status) === "verified") {
            if (confirm("Do you want to login?")) {
                window.location.href = "https://the-lumos-website.vercel.app/createuser";
            }
        }

        document.getElementById('resetPasswordForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirm-password').value;
            
            if (!password) {
              document.getElementById('password is required').style.display = 'block';
                return;
            }

            if (password !== confirmPassword) {
              document.getElementById('passwordMismatch').style.display = 'block';
              return;
            }
            if (password.length < 8) {
              alert("Password must be at least 8 characters long");
              return;
          }
            
            const response = await fetch(`http://localhost:5000/api/reset-password/<%= id %>/<%= token %>`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ password, confirmPassword })
            });

            const result = await response.json();

            if (result.status === "verified") {
              document.getElementById('resetPasswordForm').style.display = 'none';
              document.getElementById('resetSuccess').style.display = 'block';
            } else {
                alert("Error resetting password: " + result.status);
            }
        });
    });
    </script>
</head>
<body>
    <div class='billing-container col-md-12'>
        <div class='billing-details'>
            <h1 class="footer-title checkout-heading title-border text-uppercase mb-30"><%= email %></h1>
            <form id="resetPasswordForm" method="post">
              <div id="passwordMismatch" style="display: none; color: red;">Passwords do not match</div><br />
                <input type="password" name="password" id="password" placeholder="password" required/><br />
                <input type="password" name="confirm-password" id="confirm-password" placeholder="confirm-password" /><br />
                <button type="submit" class="button-one">Submit</button>
            </form>
            <div id="resetSuccess" class="reset-success" style="display: none;">Reset</div>
        </div>
    </div>
</body>
</html>
